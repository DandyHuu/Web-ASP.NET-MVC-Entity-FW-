    <link rel="stylesheet" type="text/css" href="~/Content/styles/contact_styles.css">
    <link rel="stylesheet" type="text/css" href="~/Content/styles/contact_responsive.css">
</head>
<div class="contact_info">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="contact_info_container d-flex flex-lg-row flex-column justify-content-between align-items-between">

                    <!-- Contact Item -->
                    <div class="contact_info_item d-flex flex-row align-items-center justify-content-start">
                        <div class="contact_info_image"><img src="~/Content/images/contact_1.png" alt=""></div>
                        <div class="contact_info_content">
                            <div class="contact_info_title">Điện thoại</div>
                            <div class="contact_info_text">+84 0125 287 4562</div>
                        </div>
                    </div>

                    <!-- Contact Item -->
                    <div class="contact_info_item d-flex flex-row align-items-center justify-content-start">
                        <div class="contact_info_image"><img src="~/Content/images/contact_2.png" alt=""></div>
                        <div class="contact_info_content">
                            <div class="contact_info_title">Email</div>
                            <div class="contact_info_text">robotmeo1999@gmail.com</div>
                        </div>
                    </div>

                    <!-- Contact Item -->
                    <div class="contact_info_item d-flex flex-row align-items-center justify-content-start">
                        <div class="contact_info_image"><img src="~/Content/images/contact_3.png" alt=""></div>
                        <div class="contact_info_content">
                            <div class="contact_info_title">Địa điểm</div>
                            <div class="contact_info_text">Số 135 - Tổ 3 - Phường Phúc Diễn</div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact Form -->

<div class="contact_form">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 offset-lg-1">
                <div class="contact_form_container">
                    <div class="contact_form_title">Đánh giá của bạn</div>

                    <form role="form" action="@Url.Action("Contact","Home")" method="post" id="contact_form" data-toggle="validator">
                        <div class="contact_form_inputs d-flex flex-md-row flex-column justify-content-between align-items-between">
                            <div class="form-group col-md-4">
                                <input style="width:100%;" type="text" id="contact_form_name" name="name" class="contact_form_name input_field" placeholder="Tên của bạn"  required data-error="Tên không hợp lệ!">
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="form-group  col-md-4">
                                <input style="width:100%;" type="email" id="contact_form_email" name="email" class="contact_form_email input_field" placeholder="Email của bạn" required data-error="Email không hợp lệ">
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="form-group  col-md-4">
                                <input style="width:100%;" type="text" id="contact_form_phone" name="phone" class="contact_form_phone input_field" placeholder="Số điện thoại" pattern="^[0-9]{11,13}$" required data-error="Số điện thoại không hợp lệ!">
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                        <div class="contact_form_text form-group">
                            <textarea style="max-width: none;" id="contact_form_message" class="text_field contact_form_message" name="message" placeholder="Đánh giá" required data-error="Vui lòng nhập đánh giá của bạn!"></textarea>
                            <div class="help-block with-errors"></div>
                        </div>

                        <div class="contact_form_button">
                            <button type="submit" class="btn button contact_submit_button">Gửi đánh giá</button>
                        </div>

                        <label><h2 class="text-success text-center">@ViewBag.sussess</h2></label>
                    </form>

                </div>
            </div>
        </div>
    </div>
    <div class="panel"></div>
</div>

