
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>
        Data Tables
        <small>advanced tables</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Tables</a></li>
        <li class="active">Data tables</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách danh mục</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên danh mục</th>
                                <th>Tác vụ</th>
                            </tr>
                        </thead>
                        <tbody>

                            @{
                                int index = 1;
                                for (int i = 0; i < ViewBag.listCate.Count; i++)
                                {
                                <tr>

                                    <td>@index</td>

                                    <td>
                                        @ViewBag.listCate[i].name
                                    </td>
                                    <td>
                                        
                                        <a href="@Url.Action("CateEdit","CRUD",new { id = ViewBag.listCate[i].id })" class="btn btn-sm btn-warning">Sửa</a>
                                        <a href="@Url.Action("DeleteCate","CRUD",new { ID = ViewBag.listCate[i].id })" class="btn btn-sm btn-danger">Xóa</a>
                                    </td>
                                 </tr>
                                index++;
                            


                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>STT</th>
                                <th>Tên danh mục</th>
                                <th><a href="@Url.Action("CateCreate","CRUD")" class="btn btn-sm btn-success">Thêm mới</a></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>

