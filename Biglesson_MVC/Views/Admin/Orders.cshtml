
@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>
        Đơn hàng
        <small>Danh sách đơn hàng</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Đơn hàng</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách danh mục</h3>
                </div>
                <!-- /.box-header -->
                @{ 
                    int row = 1;
                    for (int i = 0; i < ViewBag.listOrder.Count; i++)
                    {
                        for (int j = i + 1; j < ViewBag.listOrder.Count; j++)
                        {
                            if (ViewBag.listOrder[i].name == ViewBag.listOrder[j].name)
                            {
                                
                            }
                        }
                    }
                }
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th >STT</th>
                                <th>Tên người mua</th>
                                <th>Sản phẩm</th>
                                <th>Ảnh</th>
                                <th>Số lượng</th>
                                <th>Đơn giá</th>
                                <th>Thành tiền</th>
                                <th>Tổng cộng</th>
                                <th>Địa điểm</th>
                                <th>Tác vụ</th>
                            </tr>
                        </thead>

                        <tbody>
                            @{
                                int index = 1;
                                for (int i = 0; i < ViewBag.listOrder.Count; i++)
                                {

                                    <tr>
                                        <td>@index</td>

                                        <td>
                                            @ViewBag.listOrder[i].name
                                        </td>
                                        <td>@ViewBag.listOrder[i].name_product</td>
                                        <td style="width:20%;">
                                            <img style="width:40%;" src="~/Content/images/@ViewBag.listOrder[i].image" alt="Alternate Text" />
                                        </td>
                                        <td>@ViewBag.listOrder[i].quantity</td>
                                        <td>@String.Format("{0:0,0 đ}", ViewBag.listOrder[i].price)</td>
                                        <td>@String.Format("{0:0,0 đ}", ViewBag.listOrder[i].ThanhTien)</td>
                                        <td>aaaaa</td>
                                        <td>@ViewBag.listOrder[i].address</td>
                                        <td>

                                            <a href="@Url.Action("ProductEdit", "CRUD", new { id = ViewBag.listOrder[i].id_order })" class="btn btn-sm btn-warning">Sửa</a>
                                            <a href="@Url.Action("DeleteOrder","CRUD",new { ID = ViewBag.listOrder[i].id })" class="btn btn-sm btn-danger">Xóa</a>
                                        </td>
                                    </tr>
                                    index++;

                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>STT</th>
                                <th>Tên người mua</th>
                                <th>Sản phẩm</th>
                                <th>Ảnh</th>
                                <th>Số lượng</th>
                                <th>Đơn giá</th>
                                <th>Thành tiền</th>
                                <th>Tổng cộng</th>
                                <th>Địa điểm</th>

                                <th><a href="@Url.Action("CateCreate","CRUD")" class="btn btn-sm btn-success">Thêm mới</a></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>


