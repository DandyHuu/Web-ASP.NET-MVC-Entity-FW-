
@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content-header">
    <h1>
        Sản phẩm
        <small>Danh sách sản phẩm</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Admin</a></li>
        <li class="active">Sản phẩm</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách sản phẩm</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên sản phẩm</th>
                                <th>Ảnh</th>
                                <th>Đơn giá</th>
                                <th>Tên danh mục</th>
                                <th>Giảm giá</th>
                                <th>Status</th>
                                <th>Tác vụ</th>
                            </tr>
                        </thead>
                        <tbody>

                            @{
                                int index = 1;
                                for (int i = 0; i < ViewBag.listPro.Count; i++)
                                {
                            <tr>

                                <td>@index</td>

                                <td>
                                    @ViewBag.listPro[i].name_product
                                </td>
                                <td>
                                    <img src="~/Content/images/@ViewBag.listPro[i].image" style="width:30% !important;" >
                                </td>
                                <td>
                                    @ViewBag.listPro[i].price đ
                                </td>
                                <td>
                                    @ViewBag.listPro[i].cate_id
                                </td>
                                <td>
                                    @ViewBag.listPro[i].sale %
                                </td>
                                <td>

                                    <span class="text-bold text-danger"> @ViewBag.listPro[i].star <i class="fa fa-star text-warning"></i></span>
                                    @if (ViewBag.listPro[i]._new == 1)
                                    {
                                        <span class="text-bold text-info">New</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("ProductEdit","CRUD",new { id = ViewBag.listPro[i].id })" class="btn btn-sm btn-warning">Sửa</a>
                                    <a href="@Url.Action("DeleteProduct","CRUD",new { ID = ViewBag.listPro[i].id })" class="btn btn-sm btn-danger">Xóa</a>
                                </td>
                            </tr>
                                    index++;

                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>STT</th>
                                <th>Tên sản phẩm</th>
                                <th>Ảnh</th>
                                <th>Đơn giá</th>
                                <th>Tên danh mục</th>
                                <th>Giảm giá</th>
                                <th>Status</th>
                                <th><a href="@Url.Action("ProductCreate","CRUD")" class="btn btn-sm btn-success">Thêm mới</a></th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->

        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>


