
@{
    ViewBag.Title = "CateEdit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Sửa đổi :</h3>
        </div>
        <!-- /.box-header -->
        <!-- form start -->
        <form role="form" action="@Url.Action("CateEdit","CRUD")" method="post" data-toggle="validator">
            @foreach (var item in ViewBag.listCateID)
            {

                <div class="box-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">ID</label>
                        <input type="text" class="form-control " name="id_Cate" value="@item.id" disabled>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Tên danh mục</label>
                        <input type="text" class="form-control" name="name_Cate" value="@item.name"  required data-error="Không hợp lệ!!">
                        <div class="help-block with-errors"></div>
                    </div>
                </div>
                <!-- /.box-body -->
            }

                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">Lưu lại</button>
                    <a href="@Url.Action("Category","Admin")" class="btn btn-danger">Hủy</a>
                </div>
        </form>
    </div>
</section>

